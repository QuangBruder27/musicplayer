<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginLeft="5dp"
    android:padding="10dp" >


    <ImageView
        android:id="@+id/icon_app"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/ic_launcher_round"
        android:layout_width="14dp"
        android:layout_height="14dp"/>

    <TextView
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@id/icon_app"
        android:textSize="12dp"
        android:text="Music Player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_below="@+id/icon_app"
        android:textSize="17dp"
        android:textColor="#000"
        android:text="Ten bai hat"
        android:id="@+id/noti_songName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="13dp"
        android:textColor="#000"
        android:text="Ten ca si"
        android:id="@+id/noti_artistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/noti_songName" />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/noti_songName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_marginTop="15dp"
            android:id="@+id/noti_back"
            android:background="@null"
            android:scaleType="fitCenter"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/icon_back" />

        <ImageButton
            android:layout_marginTop="15dp"
            android:id="@+id/noti_play"
            android:background="@null"
            android:scaleType="fitCenter"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_pause" />

        <ImageButton
            android:layout_marginTop="15dp"
            android:id="@+id/noti_next"
            android:background="@null"
            android:scaleType="fitCenter"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/icon_next" />

        <ImageButton
            android:layout_marginTop="15dp"
            android:id="@+id/noti_close"
            android:background="@null"
            android:scaleType="fitCenter"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/icon_close" />



    </LinearLayout>

    <ImageView
        android:src="@drawable/default_ava"
        android:id="@+id/noti_cover"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="5dp" />
</RelativeLayout>