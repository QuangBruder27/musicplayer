<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/explist_imgofSong"
            android:src="@drawable/default_ava"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <LinearLayout
            android:clickable="true"
            android:layout_toLeftOf="@+id/imgbtn_star"
            android:id="@+id/explist_linearlayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/explist_imgofSong"
            android:orientation="vertical">

            <TextView
                android:clickable="false"
                android:id="@+id/explist_nameofSong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ten bai hat"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/black"
                android:textSize="20dp" />


            <RelativeLayout
                android:layout_marginTop="8dp"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:clickable="false"
                    android:id="@+id/explist_durationofSong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="04:23"
                    android:textColor="@android:color/black" />

                <TextView

                    android:layout_alignParentRight="true"
                    android:clickable="false"
                    android:id="@+id/explist_sizeofSong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="5 Mb"
                    android:textColor="@android:color/black" />
            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>